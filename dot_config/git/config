	email = 47188100+devsjc@users.noreply.github.com
[push]
	autoSetupRemote = true
    followTags = true
[pull]
    rebase = true
[rebase]
    autoStash = true
    autoSquash = true
    updateRefs = true
[fetch]
    prune = true
    pruneTags = true
[column]
    ui = auto
[branch]
    sort = -committerdate
[tag]
    sort = version:refname
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[alias]
    s = switch
    sc = switch -c
	co = checkout
	cb = checkout -b
	cam = commit -am
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	prune-all = !git remote | xargs -n 1 git remote prune
[apply]
    whitespace = fix
[log]
    date = iso-local
[init]
	defaultBranch = main
[core]
	hooksPath = ~/.config/git/hooks
